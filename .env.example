# =============================================================================
# BidKing Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://bidking:bidking@localhost:5432/bidking
# For production: postgresql://user:pass@host:5432/dbname?sslmode=require

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0
# For production: redis://:password@host:6379/0

# =============================================================================
# SAM.gov API
# =============================================================================
# Get your API key from: https://sam.gov/profile/account-details
# Entity-associated key gives 1,000 requests/day (vs 10 for basic)
SAM_GOV_API_KEY=your-sam-gov-api-key

# =============================================================================
# Stripe
# =============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Price IDs - create in Stripe Dashboard
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly_id
STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly_id
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly_id
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly_id

# =============================================================================
# Resend (Email)
# =============================================================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key
FROM_EMAIL=alerts@bidking.com
FROM_NAME=BidKing

# =============================================================================
# Security
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Application
# =============================================================================
APP_ENV=development
APP_URL=http://localhost:8000
APP_NAME=BidKing
DEBUG=true

# =============================================================================
# Rate Limiting
# =============================================================================
# Requests per minute for authenticated users
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Celery
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
